# lxc mount setting
lxc.mount.entry = /var/lib/lxc/ivi-demo-platform/system.conf etc/systemd/system.conf.d/10-environment.conf none bind,optional,create=file

lxc.mount.auto = cgroup:mixed proc:mixed sys:mixed
lxc.mount.entry = shm /dev/shm tmpfs defaults 0 0
lxc.mount.entry = /sys/kernel/security sys/kernel/security none ro,bind,optional 0 0
lxc.mount.entry = tmpfs run tmpfs defaults
lxc.mount.entry = /run/udev/data run/udev/data none ro,bind,optional,create=dir

lxc.cgroup.devices.allow = c 226:* rwm
lxc.mount.entry = /dev/dri dev/dri none bind,optional,create=dir

lxc.mount.entry = /run/drm-lease-manager/lease1 var/display/drm-lease-manager/lease none bind,create=file

lxc.cgroup.devices.allow = c 13:* rwm
lxc.mount.entry = /dev/input dev/input none bind,optional,create=dir
lxc.mount.entry = /run/pipewire/pipewire-0 var/pipewire-0 none bind,optional,create=file

# necessary to allow tty7 be changed from text mode to graphics mode
lxc.cgroup.devices.allow = c 4:7 rwm
# need to tty0 to have user session working
lxc.mount.entry = /dev/tty0 dev/tty0 none bind,create=file
# tty7 is needed to be mapped to the host
lxc.mount.entry = /dev/tty7 dev/tty7 none bind,create=file
